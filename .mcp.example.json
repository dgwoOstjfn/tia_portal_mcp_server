{
  "mcpServers": {
    "tia-portal": {
      "comment": "Only 'command' needs absolute path - replace <PROJECT_ROOT> with your project directory",
      "command": "<PROJECT_ROOT>\\venv\\Scripts\\python.exe",
      "args": [
        "MCP_Server\\start_server.py"
      ],
      "env": {
        "PYTHONUNBUFFERED": "1",
        "TIA_SESSION_TIMEOUT": "3600",
        "TIA_MAX_SESSIONS": "3"
      }
    }
  }
}
